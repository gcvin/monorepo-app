{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../packages/ui/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "rootDir": "../",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["../packages/ui/*"]
    }
  }
}
